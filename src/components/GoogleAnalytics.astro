---
const GA_MEASUREMENT_ID = import.meta.env.PUBLIC_GA_ID;
console.log('GA_MEASUREMENT_ID:', GA_MEASUREMENT_ID); // Debug log
---

{GA_MEASUREMENT_ID && (
  <>
    <!-- Google tag (gtag.js) -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}></script>
    <script define:vars={{ GA_MEASUREMENT_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', GA_MEASUREMENT_ID);
    </script>
  </>
)}

{!GA_MEASUREMENT_ID && (
  <!-- GA ID not found -->
  <script>console.log('Google Analytics: PUBLIC_GA_ID not set');</script>
)}