<Layout title="Store - Palms Collections" description="Browse available artworks from Chantal Palm's exclusive collection of contemporary graffiti-style paintings.">
	<div class="min-h-screen">
		<!-- Header -->
		<header class="border-b border-black/10 py-8 md:py-10">
			<div class="w-full flex justify-center px-4 md:px-8">
				<div class="w-full max-w-7xl">
					<div class="flex justify-between items-center relative">
						<a href="/" class="text-sm tracking-[0.3em] uppercase hover:opacity-70 transition-opacity whitespace-nowrap">
							‚Üê Back
						</a>
						<h1 class="font-serif text-lg md:text-xl lg:text-2xl tracking-[0.2em] md:tracking-[0.3em] uppercase absolute left-1/2 transform -translate-x-1/2 whitespace-nowrap">Store</h1>
						<div class="w-16"></div>
					</div>
				</div>
			</div>
		</header>

		<!-- Gallery -->
		<main class="py-16 md:py-24 pb-32">
			<div class="w-full flex justify-center px-4 md:px-8">
				<div class="w-full max-w-7xl">
					<!-- If no items -->
					{availableCollection.length === 0 && (
						<div class="text-center py-20">
							<p class="text-2xl md:text-3xl font-serif tracking-wide opacity-50">
								Collection coming soon
							</p>
						</div>
					)}

					<!-- Gallery Grid -->
					{availableCollection.length > 0 && (
						<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 md:gap-16 place-items-center">
							{availableCollection.map((piece) => (
								<article class="group cursor-pointer w-full max-w-sm">
									<div class="aspect-square bg-gray-100 mb-6 overflow-hidden">
										<img 
											src={piece.image} 
											alt={piece.title}
											class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
											loading="lazy"
										/>
									</div>
									<div class="space-y-2 text-center">
										<h2 class="text-base md:text-lg tracking-wide">{piece.title}</h2>
										<p class="text-sm opacity-50">{piece.price}</p>
									</div>
								</article>
							))}
						</div>
					)}
				</div>
			</div>
		</main>

		<!-- Instagram Footer -->
		<footer class="fixed bottom-0 left-0 right-0 bg-white/95 backdrop-blur-sm border-t border-black/10">
			<div class="container mx-auto px-4 py-5 text-center">
				<a 
					href="https://www.instagram.com/palmscollections/" 
					target="_blank" 
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 text-xs tracking-[0.25em] uppercase opacity-50 hover:opacity-100 transition-opacity"
				>
					<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
