---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - Palms Collections" description="Get in touch with Chantal Palm about commissions, inquiries, and collaborations.">
	<div class="min-h-screen flex flex-col">
		<!-- Header -->
		<header class="border-b border-black/10 py-8 md:py-10">
			<div class="container mx-auto px-4 md:px-8 max-w-7xl">
				<div class="flex justify-between items-center">
					<a href="/" class="text-sm tracking-[0.3em] uppercase hover:opacity-70 transition-opacity">
						‚Üê Back
					</a>
					<h1 class="font-serif text-xl md:text-2xl tracking-[0.3em] uppercase absolute left-1/2 transform -translate-x-1/2">Contact</h1>
					<div class="w-16"></div>
				</div>
			</div>
		</header>

		<!-- Contact Content -->
		<main class="flex-1 flex items-center justify-center px-4 py-20 md:py-32">
			<div class="max-w-2xl w-full text-center space-y-20">
				<!-- Main Heading -->
				<div>
					<h2 class="font-serif text-4xl md:text-5xl tracking-wide mb-8">
						Let's Connect
					</h2>
					<p class="text-base md:text-lg opacity-60">
						Interested in a piece or have a question?
					</p>
				</div>

				<!-- Contact Information -->
				<div class="space-y-12">
					<!-- Email -->
					<div>
						<p class="text-[10px] tracking-[0.3em] uppercase opacity-30 mb-4">Email</p>
						<a 
							href="mailto:contact@chantalpalm.art" 
							class="text-lg md:text-xl hover:opacity-70 transition-opacity inline-block"
						>
							contact@chantalpalm.art
						</a>
					</div>

					<!-- Instagram -->
					<div>
						<p class="text-[10px] tracking-[0.3em] uppercase opacity-30 mb-4">Instagram</p>
						<a 
							href="https://www.instagram.com/palmscollections/" 
							target="_blank" 
							rel="noopener noreferrer"
							class="inline-flex items-center gap-2 text-lg md:text-xl hover:opacity-70 transition-opacity"
						>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
								<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
							</svg>
							@palmscollections
						</a>
					</div>

					<!-- Location -->
					<div>
						<p class="text-[10px] tracking-[0.3em] uppercase opacity-30 mb-4">Based in</p>
						<p class="text-lg md:text-xl opacity-50">
							Sweden
						</p>
					</div>
				</div>

				<!-- Additional Info -->
				<div class="pt-12 border-t border-black/5">
					<p class="text-sm leading-relaxed opacity-50 text-center">
						For commission inquiries, collaboration opportunities, or general questions about available pieces, 
						feel free to reach out via email or Instagram DM.
					</p>
				</div>
			</div>
		</main>
	</div>
</Layout>

<style>
	a[href^="mailto:"],
	a[href^="https://www.instagram.com"] {
		position: relative;
	}
	
	a[href^="mailto:"]::after,
	a[href^="https://www.instagram.com"]::after {
		content: '';
		position: absolute;
		width: 0;
		height: 1px;
		bottom: -2px;
		left: 50%;
		background-color: currentColor;
		transition: all 0.3s ease;
		transform: translateX(-50%);
	}
	
	a[href^="mailto:"]:hover::after,
	a[href^="https://www.instagram.com"]:hover::after {
		width: 80%;
	}
</style>